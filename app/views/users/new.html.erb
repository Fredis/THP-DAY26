<h1>Inscription !</h1>
<p>Voici le formulaire d'inscription :</p>

<%= form_for @user do |f| %>
	<div class="form-group">
		<%= f.label :prenom, "Prénom" %>
		<%= f.text_field :prenom, placeholder: "Votre prénom...", class: "form-control", style: "width: 30%;" %>
	</div>
	<div class="form-group">
		<%= f.label :nom, "Nom" %>
		<%= f.text_field :nom, placeholder: "Votre nom...", class: "form-control", style: "width: 30%;" %>
	</div>
	<div class="form-group">
		<%= f.label :email, "Email" %>
		<%= f.text_field :email, placeholder: "Votre email...", class: "form-control", style: "width: 30%;" %>
	</div>
	<div class="form-group">
		<%= f.label :password, "Mot de passe" %>
		<%= f.password_field :password, placeholder: "Votre mot de passe...", class: "form-control", style: "width: 30%;" %>
  </div>
  <div class="form-group">
  <%= f.label :password_confirmation, "Confirmez votre mot de passe" %>
  <%= f.password_field :password_confirmation, placeholder: "Confirmez votre mot de passe...", class: "form-control", style: "width: 30%;" %>
</div>
<%= f.submit "S'inscrire", class: "btn btn-success" %>

<% end %>
