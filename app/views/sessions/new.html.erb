<h1>Authentifie toi !</h1>
<p>Voici le formulaire d'authentification :</p>

<%= form_for(:session, url: login_path) do |f| %>
	<div class="form-group">
		<%= f.label :email, "Email" %>
		<%= f.text_field :email, placeholder: "Votre email...", class: "form-control", style: "width: 30%;" %>
	</div>
	<div class="form-group">
		<%= f.label :password, "Mot de passe" %>
		<%= f.password_field :password, placeholder: "Votre mot de passe...", class: "form-control", style: "width: 30%;" %>
	</div>
<%= f.submit "Login", class: "btn btn-success" %>

<% end %>

